{
  // !Editor settings
  "cSpell.language": "en,de-de",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.fixAll": true },

  // !Explorer

  // Enable and configure file nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".gitignore,tsconfig.json,.env.development",
    "Taskfile.yml": ".editorconfig,.gitignore",
    "README.md": "LICENSE"
  },

  // Exclude useless files from explorer
  "files.exclude": {
    "**/bun.lockb": true,
    "**/node_modules": true
  },

  //! Language features

  // Typescript
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // ESLint
  "eslint.validate": ["javascript", "typescript"],
  "eslint.probe": ["javascript", "typescript"],
  "eslint.workingDirectories": ["backend/app"],

  //! Formatters
  "[json][jsonc][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript][javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  }
}
